  var iCnt=0;
  var files = e.target.files;
   if(files.length>50){
      alert("Maximum of 50 files can be selected");
      $('#pic_com').val('');
      ctx.setTransform(1, 0, 0, 1, 0, 0);
      canvas.width = 300;

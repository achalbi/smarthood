<% provide(:title, "Log In") %>
<div class="col-md-6 col-md-offset-3">
  <div class="signin-name-div">
      <h3 class="center pt15 text-color">Log in</h3><br>
      <h5 class="text-muted center visible-xs">
          Itâ€™s free. If you have Facebook account, just login with it.
      </h5>
      <div class="alert-message block-message error">  
        <p><strong>Incorrect Email</strong></p>
        <ul class="post_grid">
          <li>The email you entered does not belong to any account.</li>
          <li>You can login using any email associated with your account. Make sure that it is typed correctly.</li>
        </ul>
      </div>
  </div>
    <%= form_tag "/auth/identity/callback" do %>
              
            <div class = "form-group">
                <%= label :email,"Email", class: "control-label col-xs-12 pull-left mt5" %>
              <div class = "col-xs-12">
                  <%= text_field_tag :auth_key, nil, placeholder: "Email", class: "form-control" %>
              </div>
            </div>
            <div class = "form-group">
                <%= label :password,"Password", class: "control-label col-xs-12 pull-left mt5" %>
              <div class="col-xs-12">
                  <%= password_field_tag :password, nil,  placeholder: "Password", class: "form-control mt5" %>
              </div>
            </div>
            <div class = "col-xs-12 form-group">
                <a rel="nofollow" href="<%= new_password_reset_path %>" class="small text-primary">Forgot your password?</a>
            </div>
            <div class = "col-xs-12 form-group"> 
                <a href="#" id="sign_in_fb" class="btn btn-facebook col-xs-6 sign_in_fb">Log In with&nbsp;&nbsp;<i class="fa fa-facebook"></i> </a>
                <%= submit_tag "Log In", class: "btn btn-info col-xs-5  col-xs-offset-1"  %>
            </div>
            <div class = "form-group col-xs-12">
              <%= link_to "Sign up for Smarthood", root_path(:page => "signup") , class: "btn btn-success col-xs-12" %>
            </div>
  <% end %>
</div>

<script>
$(document).ready(function(){
  $(".menu_login_container").hide();
});
</script>
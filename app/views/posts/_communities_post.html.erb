<div class="center loading_page active_hide" ><img src="/assets/loading.gif"></div>
<div id="image" style="display:block;width:585px;">
  <%= form_for(@post, remote: true,  :html => {:multipart => true}) do |f| %>
  <div id="textarea_div" style="border: 1px solid #d4dae8;overflow: hidden;background-color:#f2f2f2;">
    <%= render 'shared/error_messages', object: f.object %>
    <%= fields_for :photo, Photo.new, :child_index => 'NEW_RECORD' do |photo_form| %>

    <%= photo_form.file_field :pic, id: "pic1",style: "width:1px; height:1px; padding:0px;  left:0px;display:none;" %>  

    <% end %>
    <div class=" pull-left">
      <%= f.text_area :content, placeholder: "Compose new post...", 'data-validation' => "required", 'data-validation-error-msg' => "Post can't be blank",style: "width: 440px; height: 94px;" %>
      <canvas id="imageCanvas1" style = "border: 1px solid #ddd; padding:2px; align:center;cursor:pointer; background-color:#ffffff;" width="132px" height="88px">Add pictures</canvas>
    </div> 
    <%= link_to  "Select communities","#", id: "community_post_select", class: "uibutton pull-left" %>
       <!-- <span style="margin-left:5px;font-size:14px;line-height:2;" class="sel_com_head timestamp hfive">Post to community</span>
 -->
     <%= f.submit "Post", id: "community_post_submit", class: "btn primary pull-right" %>
    <%= hidden_field_tag :type, "communities" %> 
    <div id="sel_comm_label"></div>
    <ul class="users" style="display: block;margin-top:120px;">
      <li style="margin-left:5px;font-size:14px;line-height:1.5;padding: 2px 0 2px 0;" class="sel_com_head timestamp hfive">Post to community</li>
  <% @communities.each do |cu| %>
      <!--     <div id="cu_label_<%= cu.id %>" style="display:none;margin:5px;" class="pull-left"><%=link_to cu.name, cu, remote: true %> </div> -->
       <li id="cu_label_<%= cu.id %>" style="margin-left:5px;position:relative;width:180px;" class=" active_hide community pull-left" >
        <%= link_to cl_image_tag(cu.photo.pic_url(:smallest), class:"image_al_c1 thumbnail pull-left ", id:"#{cu.photo.id}"), "#" %>
        <div style="margin-left:65px;margin-top:5px;">
           <address>
             <strong><%= link_to cu.name.capitalize, "#", style: "font-size:13px;word-wrap:break-word;" %></strong><br>
              <span style="word-wrap:break-word;"><%= cu.description.length > 17 ? cu.description.slice(0..17) + "..." : cu.description %></span><br>
           </address>  
        </div>
       </li>      
    <div style="display:none;">
      <% if active_community.id == cu.id %>
        <%= check_box_tag 'cu_ids[]', cu.id, active_community.id, id:"cu_check_#{cu.id}" %>
      <% else %>
        <%= check_box_tag 'cu_ids[]', cu.id, nil, id:"cu_check_#{cu.id}" %>
      <% end %>
    </div>
    <% end %>
    </ul>
  </div>
  <% end %>
  <div id="div_post" class="home_page_post">
    <%= render 'posts/post' %>

  </div>
  <div id="loading_page" class="center" ><img src="/assets/loading-sub.gif"></div>
</div>

</div>


					<%= select_tag :priority, options_for_select([["Critical", "Critical"], ["High", "High"], ["Medium", "Medium"], ["Low", "Low"]]),  multiple: true, class: "span4 quick_filter", style: "width:110%;", id: "issue_priority_search", size: "4" %>

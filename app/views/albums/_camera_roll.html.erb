   <script type="text/javascript">
        $(document).ready(function(){
           $(window).scroll( function() {
                if ($(window).scrollTop() > ($('#floater-wrapper1').offset().top)-40)
                    $('#floater1').addClass('floating');
                 // console.log("addClass");
                else
                    $('#floater1').removeClass('floating');
                 // console.log("removeClass");
            } );

           $('#addTo').click(function(){
                  $("#newAlb").show();
                  $("#existingAlb").show();
                   $("#share").show();
                   $("#cancelAlb").show();
                   $("#addTo").hide();
                   $("#markToEdit").hide();
                   $("#markToDelete").hide();

            });
           $('#markToDelete').click(function(){
                   $("#gallery4").show();
                   $("#addTo").hide();
                   $("#markToDelete").hide();
                   $("#floater").hide();
                    $("#gallery1").hide();
                    $("#newAlb").hide();
                    $("#existingAlb").hide();
                    $("#share").hide();
                    $("#cancelAlb").show();

            });

          $('#cancelAlb').click(function(){
                  $("#newAlb").hide();
                  $("#existingAlb").hide();
                   $("#share").hide();
                   $("#cancelAlb").hide();
                   $("#addTo").show();
                   $("#markToEdit").show();
                   $("#newAlbum").hide();
                   $("#floater").show();
                   $("#gallery1").show();
                   $("#createAlb").hide();
                   $("#updateAlbBtn").hide();
                   $("#deletePhotos").hide();
                   $("#gallery4").hide();

            });   

          $("#newAlb").click(function(){
            $("#newAlbum").show();
            $("#floater").hide();
            $("#gallery1").hide();
            $("#newAlb").hide();
            $("#existingAlb").hide();
            $("#share").hide();
            $("#createAlb").show();
            
          }); 
          $("#existingAlb").click(function(){
            $('#modal').modal('show');
             $("#floater").hide();
            $("#gallery1").hide();
            $("#newAlb").hide();
            $("#existingAlb").hide();
            $("#share").hide();
            
          });
          $("a.lightview1").fancybox({
            'transitionIn'  : 'elastic',
            'transitionOut' : 'elastic',
            'speedIn'   : 600, 
            'speedOut'    : 200, 
            'overlayShow' : false
          });

              $('.image_al_c1').click(function(){
               var id = this.id;
               if($("#photo_"+id).is(':checked')){
                  $("#photo_"+id).attr('checked', false);
                 // $("#a-img_"+id).removeClass("img-selected");
                  $("#a-img_chk_"+id).hide();
              }else{
                 $("#photo_"+id).attr('checked', true);
                //  $("#a-img_"+id).addClass("img-selected");
                  $("#a-img_chk_"+id).show();
                }
            });
                $('.image_al_c2').click(function(){
               var id = this.id;
               
               if($("#photo1_"+id).is(':checked')){
                  $("#photo1_"+id).attr('checked', false);
                  photoCount2--;
                  $("#a-img_chk1_"+id).hide();
              }else{
                 $("#photo1_"+id).attr('checked', true);
                  photoCount2++;
                  $("#a-img_chk1_"+id).show();
                }
                if(photoCount2>0){
               $("#updateAlbBtn").show();
               }else{
                $("#updateAlbBtn").hide();
               }
            });

                $("#closeX").click(function(){
                    $('#modal').modal('hide');
                });

               $('.image_al_c3').click(function(){
               var id = this.id;
               $('#modal').modal('hide');
               $("#exstAlbUpdate").show();
               $("#selectedAlb").show();
                 $("#album_"+id).attr('checked', true);
                $("#alb-"+id).show();
               
               });


               $('.image_al_c4').click(function(){
               var id = this.id;
               if($("#photo2_"+id).is(':checked')){
                  $("#photo2_"+id).attr('checked', false);
                  photoCount3--;
                  $("#a-img_chk2_"+id).hide();
              }else{
                 $("#photo2_"+id).attr('checked', true);
                  photoCount3++;
                  $("#a-img_chk2_"+id).show();

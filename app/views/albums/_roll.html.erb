   <script type="text/javascript">
     $(function() {
      $( "#camera_roll" ).accordion({
      heightStyle: "content",
      collapsible: true
      });
    });
     $("#mark").click(function(){
        $("#mark").parent().parent().hide();
        $("#upload_photos").parent().parent().hide();
        $("#cancel").parent().parent().show();
        $("#delete_photos").parent().parent().show();
        $("#create_album_roll").parent().parent().show();
     });

     $("#cancel").click(function(){
        $("#cancel").parent().parent().hide();
        $("#mark").parent().parent().show();
        $("#upload_photos").parent().parent().show();
        $("#delete_photos").parent().parent().hide();
        $("#create_album_roll").parent().parent().hide();
     });


  <div  style="margin-left:250px;" >
     <div id="camera_roll" class="span16">
          <% @camera_roll.each do |month, rolls| %>  
          <h3><%= month.strftime("%B %Y") %></h3>  
          <div style="padding:17px;border:0px;">
            <% rolls.each do |photo| %>
              <ul id="grid" class="pull-left" style="margin:2px;" >
                <li style="margin:2px;">
                  <a href="<%= photo.pic_url %>"  class="lightview1" rel="group1">
                  <%= cl_image_tag(photo.pic_url(:small), class:"thumbnail", style: "margin:0px!important;", alt: "http://res.cloudinary.com/rashi/image/upload/v1377921346/RYW-Logo-smaller_rbkszn.png")  %></a> 
              </li>
            </ul>
            <% end %>
         </div>
          <% end %>
    </div>

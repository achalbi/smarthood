
 <div id="modal_dlink" class="modal fade" >
   <div class="modal-dialog modal-sm">
   <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <span style="semibold font-15">Download Link</span>
    </div>
    <div class="modal-body" >
      <div class="row">
        <div class="">
        	<% if @album.downloadlink.include? " , " %>
	        	<% cnt = 0 %>
	        	<% @album.downloadlink.split(", ").each do |a| %>
		        	<% cnt = cnt + 1 %>
		        		<ul class='list-unstyled mb0'>
		        			 <li class="center "><span class="underline"><%= link_to @album.title.to_s+" Part "+cnt.to_s, a  %></span></li>
		        		</ul>	
		        <% end %>
		    <% else %>
		    	<ul class='list-unstyled mb0'>
		        	<li class="center "><span class="underline"><%= link_to @album.title, @album.downloadlink  %></span></li>
		       </ul>
		    <% end %>
        </div>
      </div>
      </div>
      </div>
  </div>
</div>

<script type="text/javascript">
$(function(){
  $('#modal_dlink').modal('show');
});
$("#closeX").click(function(){
  $('#modal_dlink').modal('hide');
  $('.modal-backdrop').remove();
});
</script>
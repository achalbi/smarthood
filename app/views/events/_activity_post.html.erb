  $.validate({
    validateOnBlur : false,
    form : '#activity_new_post',
    onSuccess : function() {
      $('.loading_sub').show();
      $('#activity_post_submit').attr('data-loading-text', 'Posting...');
      $('#activity_post_submit').button('loading');
    },
  });
  });

</script>

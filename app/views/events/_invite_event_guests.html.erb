                          <strong style="margin-left:15px;margin-top:10px;" > <%= link_to cu.name, "#", style: "font-size:13px;" %></strong> <br>
                        </address> 
                        <!-- <div  class="img_zoom" style="float:left;margin-left:15px;" >
                          <%= cu.description %><br>

               <div class="center loading_sub active_hide" ><img src="/assets/loading-sub.gif"></div>
              <ul class="tabs  ">
                <li class="active" id="members_event_tab"><%= link_to "Members","/events/#{event.id}/event_members?activity_id=#{activity.id }", remote: true %></li>
                <li id="post_event_tab"><%= link_to "Posts","/events/#{event.id}/event_posts?activity_id=#{activity.id }", remote: true %></li>
                <li id="photos_event_tab" class="photos_tab"><%= link_to "Photos","/events/#{event.id}/event_photos?activity_id=#{activity.id }", remote: true %></li>
              </ul>
              <script type="text/javascript">
              	$('#members_event_tab').click(function(){
				  $('#members_event_tab').addClass('active');
				  $('#post_event_tab').removeClass('active');
				  $('#photos_event_tab').removeClass('active');
				  $('.loading_sub').show();
				});

				$('#post_event_tab').click(function(){
				  $('#post_event_tab').addClass('active');
				  $('#members_event_tab').removeClass('active');
				  $('#photos_event_tab').removeClass('active');
				  currentPage<%= @event.id.to_s %> = 1;
				  $('.loading_sub').show();
				});

				$('#photos_event_tab').click(function(){
				  $('#photos_event_tab').addClass('active');
				  $('#members_event_tab').removeClass('active');
				  $('#post_event_tab').removeClass('active');
				  $('.loading_sub').show();
				});
              </script>